<?xml version="1.0" encoding="UTF-8"?>
<configuration status="INFO" monitorInterval="30">
    <loggers>
        <root level="INFO">
            <appender-ref ref="Console"/>
            <appender-ref ref="RollingFileInfo"/>
            <appender-ref ref="OP_OPERATE"/>
        </root>
        <root level="error">
            <appender-ref ref="RollingFileError"/>
        </root>
    </loggers>
    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %p - %F:%L - %m%n"/>
        </console>

        <RollingFile name="RollingFileInfo" fileName="log/console.log"
                     filePattern="log/%d{yyyyMMdd}/console.%d{yyyyMMddHH}.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss:SSS} [%t] - %l - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
                <!--<SizeBasedTriggeringPolicy size="100 MB"/>-->
            </Policies>
        </RollingFile>
        <!--异步日志配置，指向配置引用AppenderRef-->
        <Async name="ASYNC" bufferSize="262144" includeLocation="true">
            <AppenderRef ref="OP_OPERATE"/>
        </Async>

        <RollingFile name="OP_OPERATE" fileName="log/operate/operate.log"
                     filePattern="log/%d{yyyyMMdd}/operate.%d{yyyyMMddHH}.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss:SSS} [%t] - %l - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1" />
                <!--<SizeBasedTriggeringPolicy size="100 MB"/>-->
            </Policies>
        </RollingFile>

        <RollingFile name="RollingFileError" fileName="log/error.log"
                     filePattern="log/%d{yyyyMMdd}/error.%d{yyyyMMddHH}.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss:SSS} [%t] - %l - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1" />
                <!--<SizeBasedTriggeringPolicy size="100 MB"/>-->
            </Policies>
        </RollingFile>
    </appenders>
</configuration>
